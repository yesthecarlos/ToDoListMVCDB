@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 


@foreach (Item item in Model.OrderBy(d=>d.DueDate))
{
  <li>@Html.ActionLink($"{item.Description} " + $"||  {item.DueDate}", "Details", new { id = item.ItemId })
  <input type = "checkbox" checked = "**true or false?**"></li>
}



<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>